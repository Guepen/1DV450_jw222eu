
    <div class="container">

        <h1>Registrera</h1>

        <form action="/create" method="post">

            <p>
                <%= flash[:notice] %>
            </p>

            <label for="email">Email</label>
            <p>
                <input type="email" name="email" id="email" data-validation="required">
            </p>

            <label for="password">Lösenord</label>
            <p>
                <input type="password" name="password" id="password" data-validation="required">
            </p>

            <label for="title">Namn på applikationen</label>
            <p>
                <input type="text" name="title" id="title" data-validation="required">
            </p>

            <label for="description">Beskrivning av applikationen</label>
            <p>
                <textarea name="description" id="description" rows="8" cols="40" data-validation="required"></textarea>
            </p>

            <input type="submit" value="Registrera" class="btn">

        </form>

    </div>
