
    <div class="container">

        <h1>Registrera</h1>

        <form action="<%= url_for users_save_path %>" method="post">

            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

            <p>
                <%= flash[:notice] %>
            </p>

            <label for="email">Email</label>
            <p>
                <input type="email" name="email" id="email" required>
            </p>

            <label for="password">Lösenord</label>
            <p>
                <input type="password" name="password" id="password" required>
            </p>

            <label for="title">Namn på applikationen</label>
            <p>
                <input type="text" name="title" id="title" required>
            </p>

            <label for="description">Beskrivning av applikationen</label>
            <p>
                <textarea name="description" id="description" rows="8" cols="40" required></textarea>
            </p>

            <input type="submit" value="Registrera" class="btn btn-primary">

        </form>

    </div>
