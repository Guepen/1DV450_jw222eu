    <div class="container">

        <h1>API-nycklar</h1>

        <%
        if @keys

            @keys.each do |key|
        %>

            <p>
                <b>Nyckel:</b> <%= key.key %> <a href="/keys/delete/<%= key.key %>">Radera</a>
            </p>

        <%
            end
        elsif @key
        %>

           <p>
               <b>Nyckel:</b> <%= @key %> <a href="/keys/delete">Radera</a>
           </p>

        <%
        else
        %>

            <p>
                Inga nycklar hittades.
            </p>

            <p>
                <a href="/keys/create">Skapa ny nyckel</a>
            </p>

        <%
        end
        %>

    </div>
